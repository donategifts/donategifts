{
	"name": "donategifts",
	"description": "Every child should feel valued, remembered, and loved Donate holiday & birthday gifts to the kids who may not otherwise get one ",
	"scripts": {
		"autoprefix": "npx postcss *.css --use autoprefixer -d .",
		"bootstrap": "lerna bootstrap --hoist --force-local",
		"build": "lerna run build --no-private",
		"clean": "lerna run clean && gulp clean",
		"dev": "nodemon",
		"lint": "eslint --cache --fix --ext .js,.ts --ignore-path .eslintignore packages/",
		"postinstall": "npm run bootstrap",
		"start": "node server/app.js",
		"superclean": "lerna run clean && gulp superclean",
		"test": "NODE_ENV=test mocha --timeout 10000 --exit",
		"update": "lernaupdate",
		"upgradePackages": "ncu -u"
	},
	"author": "Stacy Sealky Lee",
	"license": "ISC",
	"repository": {
		"type": "git",
		"url": "git+https://github.com/donategifts/donategifts.git"
	},
	"devDependencies": {
		"@types/bcrypt": "^3.0.0",
		"@types/body-parser": "^1.19.0",
		"@types/cookie-parser": "^1.4.2",
		"@types/cors": "^2.8.8",
		"@types/express": "^4.17.9",
		"@types/express-mongo-sanitize": "^1.3.2",
		"@types/express-session": "^1.17.3",
		"@types/mongoose": "^5.10.1",
		"@types/node": "^14.14.9",
		"@types/nodemailer": "^6.4.0",
		"@types/nodemailer-mailgun-transport": "^1.4.2",
		"@types/socket.io": "^2.1.11",
		"@typescript-eslint/eslint-plugin": "^4.8.1",
		"@typescript-eslint/parser": "^4.8.1",
		"chai": "^4.2.0",
		"chai-http": "^4.3.0",
		"cross-env": "^7.0.3",
		"del": "^6.0.0",
		"eslint": "^7.15.0",
		"eslint-config-airbnb-typescript": "^12.0.0",
		"eslint-config-prettier": "^7.0.0",
		"eslint-import-resolver-alias": "^1.1.2",
		"eslint-import-resolver-node": "^0.3.4",
		"eslint-import-resolver-typescript": "^2.3.0",
		"eslint-plugin-import": "^2.22.1",
		"eslint-plugin-jsx-a11y": "^6.4.1",
		"eslint-plugin-mocha": "^8.0.0",
		"eslint-plugin-node": "^11.1.0",
		"eslint-plugin-prettier": "^3.1.4",
		"eslint-plugin-react": "^7.21.5",
		"eslint-plugin-react-hooks": "^4.2.0",
		"eslint-plugin-unicorn": "^23.0.0",
		"glob": "^7.1.6",
		"gulp": "^4.0.2",
		"husky": "^4.3.5",
		"lerna": "^3.22.1",
		"lerna-dependency-graph": "^1.0.2",
		"lerna-update-wizard": "^0.17.8",
		"mocha": "^8.2.1",
		"nodemon": "^2.0.6",
		"npm-check-updates": "^10.2.5",
		"prettier": "^2.2.1",
		"ts-node": "^9.0.0",
		"typescript": "^4.1.3"
	},
	"husky": {
		"hooks": {
			"__NOT-USED-pre-commit": "npm run lint"
		}
	}
}
