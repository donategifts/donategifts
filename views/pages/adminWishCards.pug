extends ../master

block title
    title See Wish Cards | Donate Gifts

block content
    #profile-bg.bg
        .profile-title
            h1#cray-font Wishcard unlock
    .wishcards
        .container
            if wishCardsWithAgencyDetails.length === 0
                h1 No wishcards
            else
                .row.justify-content-center
                    each card in wishCardsWithAgencyDetails
                        .col-lg-4.col-xs-12.mb-5.mt-4
                            #card-fix.card.mb-3
                                .view.overlay
                                    img#img-fix.card-img-top( src=card.wishCardImage alt='Card image' )
                                    a( href='#' )
                                        .mask.rgba-white-slight
                                .card-body
                                    .card-text-container
                                        h3.card-title.text-center.crayon-font My name is
                                        |= card.childFirstName

                                        .quick-font
                                            p.card-text
                                                span.font-weight-bold Status:
                                                |= card.status
                                            p.card-text
                                                span.font-weight-bold Age:
                                                |= card.age
                                            p.card-text
                                                - var wishItemName = card.wishItemName.length > 25 ? card.wishItemName.substring(0, 25) + "..." : card.wishItemName

                                                span.font-weight-bold Wish:
                                                |= wishItemName
                                            p.card-text
                                                - var wishItemPrice = '$ ' + card.wishItemPrice

                                                span.font-weight-bold Item Price:
                                                |= wishItemPrice
                                            p
                                                span Item Url:
                                                a( id='oldWishItemUrl'+card._id href=card.wishItemURL ) Link

                                            input.input1( id='newWishItemUrl'+card._id type='text' name='newWishItemUrl' placeholder='Url for wish item...' )
                                            button.col.wishcard-btn.btn-navy-bg( type='button' id='donate-btn-'+card._id data-value-id=card._id ) Publish WishCard

append scripts
    include ../mixins/admin/utils.pug
    +adminWishCardsJS