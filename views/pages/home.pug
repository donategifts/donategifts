block scripts
    script.
        $(document).ready(() => {
            const txtElement = document.querySelector('.typing');
            const words = JSON.parse(txtElement.getAttribute('data-words'));
            const wait = txtElement.getAttribute('data-wait');
            new DG.TypeWriter(txtElement, words, wait);
        });

    script.
        $(document).ready(() => {
            const carouselDiv = $('#partner-carousel');
            let imgList = $('#partner-carousel ul li');
            const arrowBtns = $('#partner-carousel span');

            imgList.parent().attr('data-partner-carousel', imgList.length);

            const carouselImg = () => {
                imgList = $('#partner-carousel ul li');
                if (imgList.length <= imgList.parent().data('partner-carousel')) {
                    imgList
                        .parent()
                        .append('<li>' + imgList.first().html() + '</li>')
                        .children()
                        .first()
                        .animate(
                            {
                                marginLeft: -imgList.first().outerWidth(),
                            },
                            3000,
                            () => {
                                imgList.first().remove();
                            }
                        );
                }
            };

            let autoSlideCarousel = setInterval(carouselImg, 2500);

            carouselDiv.mouseenter(() => {
                clearInterval(autoSlideCarousel);
            });

            carouselDiv.mouseleave(() => {
                autoSlideCarousel = setInterval(carouselImg, 1000);
            });

            arrowBtns.first().on('click', () => {
                imgList = $('#partner-carousel ul li');
                const leftImg = imgList.first().html();
                if (imgList.length <= imgList.parent().data('partner-carousel')) {
                    imgList
                        .parent()
                        .append('<li>' + leftImg + '</li>')
                        .children()
                        .first()
                        .remove();
                }
            });

            arrowBtns.last().on('click', () => {
                imgList = $('#partner-carousel ul li');
                const lastImg = imgList.last().html();
                if (imgList.length <= imgList.parent().data('partner-carousel')) {
                    imgList
                        .parent()
                        .prepend('<li>' + lastImg + '</li>')
                        .children()
                        .last()
                        .remove();
                }
            });
        });

