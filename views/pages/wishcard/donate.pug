                                        )
                                        label.btn.btn-outline-success.py-3.d-flex.flex-column.justify-content-center( for='button-10' ) $10
                                    .col-md-3.mb-3.mb-md-0.p-0.p-md-2
                                        input#button-50.btn-check.col-auto( type='radio'
                                            name='additional-donation'
                                            value=50
