                    text += '<a href="#" class="fw-bold mx-1" data-bs-toggle="modal" data-bs-target="#checkoutHelper">' + agency.agencyName + '<i class="fa fa-info-circle ms-1" aria-hidden="true"></i></a>';
                    text += '<span>, after confirmed payment.</span>';

                != text

            .row
                .col-md-6.mt-5
                    .card
