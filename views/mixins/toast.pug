mixin toast(config = {})
    -
        config = {
            message: 'This is a Toast', // @enubia - what the heck is this for? lol
            type: 'success',
            closeButton: false,
            delay: 3000,
            id: 'toast',
            ...config,
        };

    .toast.position-fixed.p-3( id=config.id
        role='alert'
        aria-live='assertive'
        aria-atomic='true'
        class=`bg-${config.type}`
        data-bs-delay=parseInt(config.delay, 10)
    )
        .text-white.text-center
            .toast-body.fs-5= config.message
            if config.closeButton
                button.btn-close.btn-close-white.me-2.m-auto( type='button' data-bs-dismiss='toast' aria-label='Close' )