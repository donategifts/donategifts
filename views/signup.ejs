<!DOCTYPE html>
<html lang="en" dir="ltr">

<head>
  <title>Sign Up to Donate Gifts</title>

  <%- include('./templates/header')-%>

  <link rel="stylesheet" href="../css/signup.css">
  <!-- jquery -->
  <script src="https://ajax.googleapis.com/ajax/libs/jquery/3.5.1/jquery.min.js"></script>
  <!-- js scripts -->
  <script src="../clientJS/signup.js"></script>
</head>

<body>
  <%- include('./templates/nav')-%>

  <div class="signup-bg">
    <div class="d-flex container justify-content-center mg-top-btm">

      <!-- sign up form | post to '/users/signup' -->
      <div class="wrap-box">
        <form class="signup" action="/users/signup" method="post">
          <!-- form title -->
          <div class="sign-row lg title-text crayon-font mg-sm">
            <div class="userLogBtn"><a href="/users/signup">Sign Up </a>
            </div>
            OR
            <div class="userLogBtn">
              <a href="/users/login"> Log In</a>
            </div>
            <!-- <img class="img-inline" src="../img/line-gift-white.png" alt="line-art-gift-image"> -->
          </div>
          <!-- first name -->
          <div class="wrap-input mg-btm" data-validate="First name is required">
            <input required class="input-default comf-font" type="text" name="fName" id="fName"
              placeholder="First name : " title="First name must contain alphabets only">
          </div>
          <!-- last name -->
          <div class="wrap-input mg-btm" data-validate="Last name is required">
            <input required class="input-default comf-font" type="text" name="lName" id="lName"
              placeholder="Last name : " title="Last name must contain alphabets only">
          </div>
          <!-- email -->
          <div class="wrap-input mg-btm" data-validate="Email is required">
            <input required class="input-default comf-font" type="email" name="email" id="email" placeholder="Email : "
              title="example: username@xyz.com">
          </div>
          <!-- password -->
          <div class="wrap-input mg-btm2" data-validate="Password is required">
            <input required class="input-default comf-font" type="password" name="password" id="password"
              placeholder="Password : " pattern="(?=.*\d)(?=.*[a-z]).{8,}"
              title="Must contain at least one number and one lowercase letter, and at least 8 or more characters">
          </div>
          <!-- userRole section -->
          <fieldset class="wrap-radio comf-font">
            <legend class="md2">Signing up as :</legend>
            <div class="row">
              <input type="radio" id="donor" name="userRole" value="donor">
              <label for="donor">Gift Sender</label>
            </div>
            <div class="row">
              <input type="radio" id="partner" name="userRole" value="partner" data-toggle="modal" data-target="#signupModalCenter">
              <label for="partner">Foster Care Partner</label>
            </div>

          </fieldset>
          <!-- submit button section -->
          <div class="container-form-btn">
            <button class="form-btn comf-font" type="submit">
              Sign Up
            </button>
          </div>
        </form>
      </div>

      <%- include('./templates/signupModal')-%>

    </div>
  </div>

  <%- include('./templates/footer')-%>

  <script src="https://cdn.jsdelivr.net/npm/popper.js@1.16.1/dist/umd/popper.min.js"
    integrity="sha384-9/reFTGAW83EW2RDu2S0VKaIzap3H66lZH81PoYlFhbGU+6BZp6G7niu735Sk7lN" crossorigin="anonymous">
  </script>
  <script src="https://stackpath.bootstrapcdn.com/bootstrap/4.5.1/js/bootstrap.min.js"
    integrity="sha384-XEerZL0cuoUbHE4nZReLT7nx9gQrQreJekYhJD9WNWhH8nEW+0c5qq7aIo2Wl30J" crossorigin="anonymous">
  </script>
</body>

</html>