{
  "extends": [
    "airbnb-base",
    "prettier"
  ],
  "plugins": [
    "mocha"
  ],
  "env": {
    "mocha": true
  },
  "rules": {
    "camelcase": "off",
    "no-plusplus": "off",
    "consistent-return": "off",
    "no-underscore-dangle": "off",
    "indent": ["error", 2],
    "global-require": "off"
  },
  "globals": {
    "io": true
}