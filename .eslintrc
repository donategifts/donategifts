{
  "parserOptions": {
    "ecmaVersion": 13
  },
  "extends": [
    "airbnb-base",
    "eslint:recommended",
    "prettier"
  ],
  "plugins": [
    "prettier",
    "mocha"
  ],
  "env": {
    "mocha": true
  },
  "rules": {
    "prettier/prettier": [
      "error",
      {
        "endOfLine": "lf"
      }
    ],
    "no-unused-vars": [
      "error",
      {
        "argsIgnorePattern": "^_",
        "varsIgnorePattern": "^_",
        "caughtErrorsIgnorePattern": "^_"
      }
    ],
    "no-restricted-syntax": "off",
    "camelcase": "off",
    "no-plusplus": "off",
    "consistent-return": "off",
    "no-underscore-dangle": "off",
    "global-require": "off",
    "import/no-dynamic-require": "off",
    "class-methods-use-this": "off"
  },
  "globals": {
    "io": true
  }
}