    "eslint-plugin-mocha": "^9.0.0",
    "eslint-plugin-node": "^11.1.0",
    "eslint-plugin-prettier": "^3.4.0",
    "eslint-plugin-unicorn": "^33.0.1",
    "eslint-plugin-unused-imports": "^1.1.1",
    "husky": "^6.0.0",
    "nodemon": "^2.0.7",
    "npm-check-updates": "^11.6.0",
    "prettier": "^2.3.1",
    "ts-node": "^10.0.0",
    "typescript": "^4.3.2"
  },
  "husky": {
    "hooks": {
      "pre-commit": "npm run lint"
    }
