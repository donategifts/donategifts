<!DOCTYPE html>
<html lang="en" dir="ltr">
  <head>
    <title>Register as a Foster Care Partner</title>

    <%- include('./templates/header')-%>

    <link rel="stylesheet" href="../public/css/signup.css" />
    <!-- jquery -->
    <script src="https://unpkg.com/imask@6.0.5/dist/imask.js"></script>
    <!-- js scripts -->
    <script src="/public/clientJS/agency.js"></script>
  </head>

  <body>
    <%- include('./templates/nav')-%>

    <div class="signup-bg">
      <div class="d-flex container justify-content-center mg-top-btm">
        <!-- agency sign up form | post to '/users/agency' -->
        <div class="wrap-box">
          <form class="signup-agency" action="/users/agency" method="post">
            <!-- form title -->
            <div class="sign-row lg title-text crayon-font mg-sm">
              Last Step: Register Your Organization
              <!-- <img class="img-inline" src="../public/img/line-gift-white.png" alt="line-art-gift-image"> -->
            </div>

            <!-- agencyName -->
            <div class="wrap-input mg-btm" data-validate="Required field, please fill it out.">
              <input
                required
                class="input-default quick-font"
                type="text"
                name="agencyName"
                id="agencyName"
                placeholder="Organization Name (individual partners, write your agency): "
              />
            </div>
            <!-- agencyWebsite -->
            <div class="wrap-input mg-btm">
              <input
                class="input-default quick-font"
                type="text"
                name="agencyWebsite"
                id="agencyWebsite"
                placeholder="Organization Website (if any) : "
                title="This helps us verify your organization"
              />
            </div>
            <!-- agencyAddress -->
            <div class="wrap-input mg-btm" data-validate="Agency address is required">
              <input
                required
                class="input-default quick-font"
                type="text"
                name="agencyAddress1"
                id="agencyAddress1"
                placeholder="Organization Address: "
                title="agencyAddress1"
              />
            </div>
            <!-- agencyAddress2 -->
            <div class="wrap-input mg-btm">
              <input
                class="input-default quick-font"
                type="text"
                name="agencyAddress2"
                id="agencyAddress2"
                placeholder="Organization Address 2: "
                title="agencyAddress2"
              />
            </div>
            <!-- agencyCity -->
            <div class="wrap-input mg-btm" data-validate="City is required">
              <input
                required
                class="input-default quick-font"
                type="text"
                name="city"
                id="city"
                placeholder="Organization City: "
                title="city"
              />
            </div>
            <!-- agencyState -->
            <div class="wrap-input mg-btm" data-validate="State is required">
              <input
                required
                class="input-default quick-font"
                type="text"
                name="state"
                id="state"
                placeholder="Organization State: "
                title="state"
              />
            </div>
            <!-- agencyCity -->
            <div class="wrap-input mg-btm" data-validate="Coutry is required">
              <input
                required
                class="input-default quick-font"
                type="text"
                name="country"
                id="country"
                placeholder="Organization Country: "
                title="country"
              />
            </div>
            <!-- agencyZipCode -->
            <div class="wrap-input mg-btm" data-validate="Zip code is required">
              <input
                required
                class="input-default quick-font"
                type="text"
                name="zipcode"
                id="zipcode"
                placeholder="Organization Zip Code: "
                title="zipcode"
              />
            </div>
            <!-- agencyPhone -->
            <div class="wrap-input mg-btm" data-validate="Phone number is required">
              <input
                required
                class="input-default quick-font"
                type="text"
                name="agencyPhone"
                id="agencyPhone"
                placeholder="Organization Phone Number in format: 123-456-7890"
                title="agencyPhone"
              />
            </div>

            <!-- agencyBio -->
            <div class="wrap-input mg-btm">
              <input
                class="input-default quick-font"
                type="text"
                name="agencyBio"
                id="agencyBio"
                placeholder="Organization Description : "
                title="agencyBio"
              />
            </div>

            <!-- submit button section -->
            <div class="container-form-btn">
              <button class="form-btn quick-font" id="submit-btn" type="submit">Submit</button>
            </div>
          </form>
        </div>
      </div>
    </div>

    <%- include('./templates/footer')-%>
  </body>
</html>
