{
  "compilerOptions": {
    "module": "commonjs",
    "target": "es2019",
    "lib": [
      "es2019"
    ],
    "skipLibCheck": true,
    "moduleResolution": "node",
    "strict": true,
    "noImplicitAny": false,
    "removeComments": false,
    "emitDecoratorMetadata": true,
    "composite": true,
    "experimentalDecorators": true,
    "strictPropertyInitialization": false,
    "resolveJsonModule": true,
    "isolatedModules": false,
    "allowJs": true,
  },
  "exclude": [
    "node_modules"
  ],
}