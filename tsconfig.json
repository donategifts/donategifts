{
    "compilerOptions": {
        "target": "ESNext",
        "lib": [
            "ESNext",
        ],
        "outDir": "dist",
        "module": "NodeNext",
        "moduleResolution": "NodeNext",
        "strict": true,
        "resolveJsonModule": true,
        "noImplicitAny": true,
        "noImplicitReturns": true,
        "esModuleInterop": true,
        "skipLibCheck": true,
        "typeRoots": [
            "./types",
            "./node_modules/@types"
        ]
    },
    "ts-node": {
        "transpileOnly": true,
    },
    "include": [
        "src/**/*.ts",
    ]
}