{
    "compilerOptions": {
        "target": "ES2022",
        "lib": [
            "ES2022",
        ],
        "outDir": "dist",
        "module": "CommonJS",
        "moduleResolution": "Node",
        "strict": true,
        "resolveJsonModule": true,
        "esModuleInterop": true,
        "skipLibCheck": true,
        "noImplicitAny": false,
        "allowSyntheticDefaultImports": true,
        "typeRoots": ["./types", "./node_modules/@types"],
    },
    "include": [
        "server/**/*",
    ]
}