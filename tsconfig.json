{
  "compilerOptions": {
    "module": "CommonJS",
    "target": "ES6",
    "lib": [
      "ES2020"
    ],
    "outDir": "build",
    "skipLibCheck": true,
    "moduleResolution": "node",
    "sourceMap": true,
    "strict": true,
    "noImplicitAny": false,
    "emitDecoratorMetadata": true,
    "experimentalDecorators": true,
    "resolveJsonModule": true,
    "allowJs": true,
    "checkJs": true
  },
  "ts-node": {
    "files": true
  },
  "include": [
    "*/**/*.ts",
    "*/**/*.js",
    "*.ts",
    "*.js"
  ],
  "exclude": [
    "node_modules",
    "old"
  ],
}
