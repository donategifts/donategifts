<!-- Wish Card deck -->
<div class="wishcards">
  <h1>Become Our Secret Santa</h1>
  <div class="wishcards-container mx-auto">
    <% if (!locals.wishcards || wishcards.length === 0) { %>
    <h1>Loading...</h1>
    <% } else { %>
    <div id="carouselExampleIndicators" class="carousel slide" data-ride="carousel">
      <div class="carousel-inner">
        <% for (let i = 0; i < wishcards.length; i = i+3) {%>
        <div class="carousel-item <%= i === 0 ? 'active' : '' %>">
          <div class="row justify-content-center">
            <% for (let j = i; j < i+3 && j < wishcards.length; j++) { %>
            <div class="col-lg-4 col-xs-12 mb-5 px-4">
              <!-- Card -->
              <div id="card-fix" class="card h-100">
                <!--Card image-->
                <div class="view overlay">
                  <img id="img-fix" class="card-img-top" src="<%= wishcards[j].wishCardImage %>" alt="Card image" />
                  <a href="#">
                    <div class="mask rgba-white-slight"></div>
                  </a>
                </div>
                <!--Card content-->
                <div class="card-body">
                  <a href="/wishcards/<%= wishcards[j]._id %>" class="wishcard__icon--fixed msg-icon">
                    <i class="far fa-envelope"></i>
                  </a>
                  <div class="card-details">
                    <!--Title-->
                    <h3 class="card-title text-center crayon-font">My name is <%= wishcards[j].childFirstName %></h3>
                    <!--Text-->
                    <p>
                      <span class="font-weight-bold">Wish : </span>
                      <%= wishcards[j].wishItemName.length > 24 ? wishcards[j].wishItemName.substring(0, 23) + "..." :
                      wishcards[j].wishItemName %>
                    </p>
                    <p class="wish-price">
                      <span class="font-weight-bold">Item Price :</span> $<%= wishcards[j].wishItemPrice %>
                    </p>
                    <p>
                      <span class="font-weight-bold">Interest : </span>
                      <%= wishcards[j].childInterest.length > 24 ? wishcards[j].childInterest.substring(0, 21) + "..."
                      : wishcards[j].childInterest %>
                    </p>

                    <div class="card-action row">
                      <div class="col-sm-6 mb-2">
                        <a href="/wishcards/<%= wishcards[j]._id %>" class="wishcard__link--white bdr-2">View More</a>
                      </div>
                      <div class="col-sm-6 mb-2">
                        <% if (wishcards[j].status === 'donated') { %>
                        <button type="button" class="wishcard__button--disabled bdr-2" disabled>
                          Donated
                        </button>

                        <% } else { %>

                        <% if (locals.user) { %>
                        <a href="wishcards/donate/<%= wishcards[j]._id %>"><button type="button"
                            class="wishcard__button--blue bdr-2">
                            Donate Gift
                          </button></a>
                        <% } else { %>
                        <button type="button" data-toggle="modal" class="wishcard__button--blue bdr-2"
                          data-target="#firstLogInModal">
                          Donate Gift
                        </button>
                        <% } %>
                        <% } %>
                      </div>
                    </div>
                  </div>
                </div>
              </div>
            </div>
            <% } %>
          </div>
        </div>
        <% } %>
      </div>
      <a class="carousel-control-left" href="#carouselExampleIndicators" role="button" data-slide="prev">
        <span class="carousel-control-prev-icon" aria-hidden="true"><i class="fa fa-arrow-circle-left fa-2x"></i></span>
        <span class="sr-only">Previous</span>
      </a>
      <a class="carousel-control-right" href="#carouselExampleIndicators" role="button" data-slide="next">
        <span class="carousel-control-next-icon" aria-hidden="true"><i
            class="fa fa-arrow-circle-right fa-2x"></i></span>
        <span class="sr-only">Next</span>
      </a>
    </div>
    <div class="mobile__carousel-wrapper">
      <div id="mobileCarousel" class="carousel slide" data-ride="carousel">
        <div class="carousel-inner">
          <% for (let i = 0; i < wishcards.length; i = i+1) {%>
          <div class="carousel-item <%= i === 0 ? 'active' : '' %>">
            <div class="row justify-content-center">
              <% for (let j = i; j < i+1 && j < wishcards.length; j++) { %>
              <div class="col-lg-4 col-xs-12 mb-4 px-4">
                <!-- Card -->
                <div id="card-fix" class="card mb-3">
                  <!--Card image-->
                  <div class="view overlay">
                    <img id="img-fix" class="card-img-top" src="<%= wishcards[j].wishCardImage %>" alt="Card image" />
                    <a href="#">
                      <div class="mask rgba-white-slight"></div>
                    </a>
                  </div>
                  <!--Card content-->
                  <div class="card-body">
                    <a href="/wishcards/<%= wishcards[j]._id %>" class="wishcard__icon--fixed msg-icon">
                      <i class="far fa-envelope"></i>
                    </a>
                    <div class="card-details">
                      <!--Title-->
                      <h3 class="card-title text-center crayon-font">My name is <%= wishcards[j].childFirstName %></h3>
                      <!--Text-->
                      <p>
                        <span class="font-weight-bold">Wish : </span>
                        <%= wishcards[j].wishItemName.length > 24 ? wishcards[j].wishItemName.substring(0, 23) + "..." :
                        wishcards[j].wishItemName  %>
                      </p>
                      <p class="wish-price">
                        <span class="font-weight-bold">Item Price :</span> $<%= wishcards[j].wishItemPrice %>
                      </p>
                      <p>
                        <span class="font-weight-bold">Interest : </span>
                        <%= wishcards[j].childInterest.length > 24 ? wishcards[j].childInterest.substring(0, 21) + "..."
                        : wishcards[j].childInterest %>
                      </p>
                      <div class="card-action row">
                        <div class="col-sm-6 mb-2">
                          <a href="/wishcards/<%= wishcards[j]._id %>" class="wishcard__link--white bdr-2">View More</a>
                        </div>
                        <div class="col-sm-6 mb-2">

                          <% if (wishcards[j].status === 'donated') { %>
                          <button type="button" class="wishcard__button--disabled bdr-2" disabled>
                            Donated
                          </button>

                          <% } else { %>
                          <% if (locals.user) { %>
                          <a href="wishcards/donate/<%= wishcards[j]._id %>"><button type="button"
                              class="wishcard__button--blue bdr-2">
                              Donate Gift
                            </button></a>
                          <% } else { %>
                          <button type="button" data-toggle="modal" class="wishcard__button--blue bdr-2"
                            data-target="#firstLogInModal">
                            Donate Gift
                          </button>
                          <% } %>
                          <% } %>
                        </div>
                      </div>
                    </div>

                  </div>
                </div>
              </div>
              <% } %>
            </div>
          </div>
          <% } %>
        </div>
      </div>
      <div class="col-12 d-flex justify-content-center align-items-start" id="mobile__carousel-controls">
        <a class="carousel-control-left mx-4" href="#mobileCarousel" role="button" data-slide="prev">
          <span class="carousel-control-prev-icon" aria-hidden="true"><i
              class="fa fa-arrow-circle-left fa-2x"></i></span>
          <span class="sr-only">Previous</span>
        </a>
        <a class="carousel-control-right mx-4" href="#mobileCarousel" role="button" data-slide="next">
          <span class="carousel-control-next-icon" aria-hidden="true"><i
              class="fa fa-arrow-circle-right fa-2x"></i></span>
          <span class="sr-only">Next</span>
        </a>
      </div>
    </div>
    <% } %>
  </div>
</div>