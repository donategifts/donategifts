<!DOCTYPE html>
<html lang="en">
  <head>
    <title>See Wish Cards | Donate Gifts</title>
    <!-- ** NOTE: CDN Bootstrap.js, Popper.js, and jQuery are moved to the bottom so the page loads faster-->
    <%- include('./templates/header')-%>
    <link rel="stylesheet" href="/public/css/search.css" />
    <script
      src="https://cdnjs.cloudflare.com/ajax/libs/socket.io/2.3.1/socket.io.js"
      integrity="sha512-AcZyhRP/tbAEsXCCGlziPun5iFvcSUpEz2jKkx0blkYKbxU81F+iq8FURwPn1sYFeksJ+sDDrI5XujsqSobWdQ=="
      crossorigin="anonymous"
    ></script>
  </head>

  <body>
    <%- include('./templates/nav')-%>
    <div class="bg" id="profile-bg">
      <div class="profile-title">
        <h1 id="cray-font">Wishcard unlock</h1>
      </div>
    </div>
    <!-- Wish Card deck -->
    <div class="wishcards">
      <!-- Dynamic Card Display now fixed and responsive-->
      <div class="container">
        <% if (wishCardsWithAgencyDetails.length === 0) { %>
        <h1>No wishcards</h1>
        <% } else { %>
        <div class="row justify-content-center">
          <% for (var i = 0; i < wishCardsWithAgencyDetails.length; i++) { %>
          <div class="col-lg-4 col-xs-12 mb-5 mt-4">
            <!-- Card -->
            <div id="card-fix" class="card mb-3">
              <!--Card image-->
              <div class="view overlay">
                <img
                  id="img-fix"
                  class="card-img-top"
                  src="<%= wishCardsWithAgencyDetails[i].wishCardImage %>"
                  alt="Card image"
                />
                <a href="#">
                  <div class="mask rgba-white-slight"></div>
                </a>
              </div>
              <!--Card content-->
              <div class="card-body">
                <div class="card-text-container">
                  <!--Title-->
                  <h3 class="card-title text-center crayon-font">
                    My name is <%= wishCardsWithAgencyDetails[i].childFirstName %>
                  </h3>
                  <!--Text-->
                  <div class="quick-font">
                    <p class="card-text">
                      <span class="font-weight-bold">Status : </span> <%= wishCardsWithAgencyDetails[i].status %>
                    </p>
                    <p class="card-text">
                      <span class="font-weight-bold">Age : </span> <%= wishCardsWithAgencyDetails[i].age %>
                    </p>
                    <p class="card-text">
                      <span class="font-weight-bold">Wish : </span> <%=
                      wishCardsWithAgencyDetails[i].wishItemName.length > 25 ?
                      wishCardsWithAgencyDetails[i].wishItemName.substring(0, 25) + "..." :
                      wishCardsWithAgencyDetails[i].wishItemName %>
                    </p>
                    <p class="card-text">
                      <span class="font-weight-bold">Item Price :</span> $<%=
                      wishCardsWithAgencyDetails[i].wishItemPrice %>
                    </p>
                    <p>
                      <span>Item Url:</span>
                      <a
                        id="oldWishItemUrl<%= wishCardsWithAgencyDetails[i]._id %>"
                        href="<%= wishCardsWithAgencyDetails[i].wishItemURL %>"
                        >Link</a
                      >
                    </p>
                    <input
                      id="newWishItemUrl<%= wishCardsWithAgencyDetails[i]._id %>"
                      class="input1"
                      type="text"
                      name="newWishItemUrl"
                      placeholder="Url for wish item..."
                    />
                    <button
                      type="button"
                      id="donate-btn-<%= wishCardsWithAgencyDetails[i]._id %>"
                      data-value-id="<%= wishCardsWithAgencyDetails[i]._id %>"
                      class="col wishcard-btn btn-navy-bg"
                    >
                      Publish WishCard
                    </button>
                  </div>
                </div>
              </div>
            </div>
          </div>
          <% } %>
        </div>
        <% } %>
      </div>
    </div>

    <%- include('./templates/footer')-%>
    <script src="/public/clientJS/adminWishCards.js"></script>
  </body>
</html>
