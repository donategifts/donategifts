  <title>Holiday Gift Donation | Donate Gifts to Foster Kids -Virtual Toy Drive</title>
  <!-- ** NOTE: CDN Bootstrap.js, Popper.js, and jQuery are moved to the bottom so the page loads faster-->

  <!-- Site SEO -->
  <meta name="description"
    content="How to help children in foster care | Send holiday birthday gifts to foster kids easily by using embedded Amazon delivery" />
  <meta name="robots" content="index, follow" />
  <meta name="keywords" content="children, gift, wish, foster, donate" />
  <%- include('./templates/header')-%>
  <!-- facebook login -->
  <script>
    window.fbAsyncInit = function () {
      FB.init({
        appId: '<%- process.env.FB_APP_ID %>',
        cookie: true,
        xfbml: true,
        version: 'v8.0',
      });
      FB.AppEvents.logPageView();
    };
    (function (d, s, id) {
      var js,
        fjs = d.getElementsByTagName(s)[0];
      if (d.getElementById(id)) {
        return;
      }
      js = d.createElement(s);
