<body>
  <div id="fb-root"></div>
  <script async defer crossorigin="anonymous" src="https://connect.facebook.net/en_US/sdk.js#xfbml=1&version=v8.0"
    nonce="XBZR4Yw2"></script>
  <%- include('./templates/nav')-%>
  <%- include('./templates/wishCardDonateModal')-%>
  <!-- header section-->

  <div class="hero container-fluid d-flex justify-content-center align-items-center" id="home-bg">
    <div class="row">
      <div class="col-12">
        <h1>Send Gifts to
          <span class="typing" data-wait="2000"
            data-words='["Foster Children", "Homeless Youth", "Kids in Emergency Shelters"]'></span>
        </h1>
        <h4 class="hide">Every child should feel valued and loved</h4>
        <h4 class="m-mobile">Donate holiday gifts and school supplies to kids in need
        </h4>
        <a href="/howto" class="btn-white-navy-lg">How It Works</a>
        <a href="/wishcards" class="btn-orange-navy-lg">See Wish Cards</a>
      </div>
    </div>
  </div>

  <%- include('./templates/firstLogInModal')-%>
  <%- include('./templates/homeSampleCards')-%>

  <div class="status-section container-fluid justify-content-center">
    <div class="status-info row-auto">
      <div class="col-md">
        <div class="circle text-center">
          <p class="status">
            <img class="wreath3" src="../public/img/wreath-3.svg" alt="illustration of wreath decoration"
              loading="lazy">
            <% if(undonatedCards === 1 || undonatedCards === 0) { %>
            <span class="status-numbers"> <%= undonatedCards%> </span>
            <span class="status-text">child
              awaiting <br /> your donation</span>
            <% } else { %>
            <span class="status-numbers"> <%= undonatedCards%> </span>
            <span class="status-text">children
              awaiting <br /> your donation</span>
            <% } %>
          </p>
          <!------------
            below is only for christmas
            ------------>
          <!-- <p id="status_christmas" class="status">            
            <img class="wreath" src="../public/img/wreath-1.svg" alt="wreathpic" loading="lazy">
            <span id="tilChristmas" class="status-numbers"> <%= christmasData.days %> </span>
            <span class="status-text"><%= christmasData.text %></span>
          </p> -->
        </div>
      </div>
      <div class="col-md">
        <div class="circle text-center">
          <p class="status">
            <img class="wreath2" src="../public/img/wreath-2.svg" alt="wreathpic" loading="lazy">
            <span class="status-numbers"> <%= donatedCards%> </span>
            <span class="status-text">children
              received <br /> their gifts!</span>
          </p>
        </div>
      </div>
      <div class="col-md">
        <div class="circle text-center">
          <p class="status">
            <img class="wreath3" src="../public/img/wreath-3.svg" alt="wreathpic" loading="lazy">
            <span class="status-numbers"> <%= verifiedAgencies%> </span>
            <span class="status-text">agencies
              partnered </br>with DonateGifts</span>
          </p>
        </div>
      </div>
    </div>
  </div>


